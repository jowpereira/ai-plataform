{
  "version": "1.0",
  "name": "lab-worker-paralelo",
  "resources": {
    "models": {
      "gpt-4o-mini": {
        "type": "openai",
        "deployment": "gpt-4o-mini",
        "env_vars": {
          "OPENAI_API_KEY": "${OPENAI_API_KEY}"
        }
      }
    },
    "tools": [
      {
        "id": "consultar_clima",
        "path": "ferramentas.basicas:consultar_clima",
        "description": "Consulta o clima"
      },
      {
        "id": "calcular_custos",
        "path": "ferramentas.basicas:calcular_custos",
        "description": "Calcula custos"
      }
    ]
  },
  "agents": [
    {
      "id": "analista_clima",
      "role": "Analista de Clima",
      "model": "gpt-4o-mini",
      "instructions": "Você é um analista de clima. Forneça um resumo rápido.",
      "tools": ["consultar_clima"]
    },
    {
      "id": "analista_custos",
      "role": "Analista de Custos",
      "model": "gpt-4o-mini",
      "instructions": "Você é um analista de custos. Estime custos de viagem.",
      "tools": ["calcular_custos"]
    }
  ],
  "workflow": {
    "type": "parallel",
    "steps": [
      {
        "id": "passo_clima",
        "agent": "analista_clima",
        "input_template": "Verifique o clima para: {{user_input}}"
      },
      {
        "id": "passo_custo",
        "agent": "analista_custos",
        "input_template": "Estime custos de viagem para: {{user_input}}"
      }
    ]
  }
}
