{
  "version": "1.0",
  "name": "lab-worker-humano",
  "resources": {
    "models": {
      "gpt-4o-mini": {
        "type": "azure-openai",
        "deployment": "gpt-4o-mini"
      }
    },
    "tools": [
      {
        "id": "consultar_clima",
        "path": "mock_tools.basic:consultar_clima",
        "description": "Consulta o clima"
      }
    ]
  },
  "agents": [
    {
      "id": "pesquisador",
      "role": "Pesquisador",
      "model": "gpt-4o-mini",
      "instructions": "Você é um pesquisador.",
      "tools": ["consultar_clima"]
    },
    {
      "id": "redator",
      "role": "Redator",
      "model": "gpt-4o-mini",
      "instructions": "Você é um redator.",
      "tools": []
    }
  ],
  "workflow": {
    "type": "sequential",
    "steps": [
      {
        "id": "passo_1",
        "agent": "pesquisador",
        "input_template": "Encontre o clima para: {{user_input}}"
      },
      {
        "id": "revisao_humana",
        "type": "human",
        "input_template": "Revise a pesquisa: {{previous_output}}. Adicione seus comentários ou digite 'APROVADO'."
      },
      {
        "id": "passo_3",
        "agent": "redator",
        "input_template": "Com base na pesquisa ({{passo_1}}) e comentários humanos ({{revisao_humana}}), escreva um relatório final."
      }
    ]
  }
}
